  <h2>Find a animal</h2>
  <%= form_tag animals_path, method: :get do %>
    <%= text_field_tag :name,
      params[:name],
      class: "form-control",
      placeholder: "name?"
    %>
    <%= text_field_tag :color,
      params[:color],
      class: "form-control",
      placeholder: "color?"
    %>
    <%= select_tag :category,
      # params[:category],
      options_from_collection_for_select(@categories, :name, :name, @category&.name),
      include_blank: "Espèce",
      # collection: @category,
      class: "form-control",
      placeholder: "catégorie"
    %>

    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
